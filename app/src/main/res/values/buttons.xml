<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Component.Rounded</item>
    </style>

    <style name="ButtonLarge" parent="ButtonPrimary">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonSelector" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="iconTint">@color/onBackground</item>
        <item name="iconPadding">18dp</item>
        <item name="iconSize">18dp</item>
        <item name="android:radius">@dimen/corner_radius</item>
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>