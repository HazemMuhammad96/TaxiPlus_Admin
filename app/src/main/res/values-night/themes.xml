<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaxiPlusAdmin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSecondary">@color/primary</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/TextViewPrimary</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="TextViewPrimary" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/onBackground</item>
    </style>
</resources>